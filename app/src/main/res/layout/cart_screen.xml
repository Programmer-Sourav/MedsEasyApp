<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/colorPrimary"
        android:id="@+id/footer"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="â‚¹ 927.00"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:id="@+id/price_total"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Add Delivery Address"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/add_delivery_address"
            android:textSize="20dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_above="@+id/footer">
        <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/footer"
        android:id="@+id/complete_view">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/dashed_bg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:id="@+id/top_view"
        >
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="32dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/delivery_image"
        android:src="@mipmap/delivery_truck"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/delivery_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/delivery_image"
            android:gravity="center"
            android:text="@string/delivery_prompt" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/top_view"
        android:id="@+id/cart_list"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:id="@+id/cart_details_section"
        android:layout_below="@+id/cart_list">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                android:text="Apply Coupon"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:paddingLeft="8dp"
                android:drawableLeft="@mipmap/offer_small"
                android:background="@drawable/button_bg"/>
           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_height="32dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:weightSum="2">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/cart_value_text"
                   android:layout_weight="1"
                   android:layout_gravity="center"
                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/cart_value_price"
                   android:layout_weight="1"
                   android:text="Rs.828"
                   android:gravity="right"
                   android:textColor="#000000"
                   android:layout_gravity="center"
                   />
           </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_charge"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_delivery_charge"
                    android:layout_weight="1"
                    android:text="Rs.99"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/dash_drawable"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_to_be_paid_prompt"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/amount_to_be_paid"
                    android:layout_weight="1"
                    android:text="Rs.927"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="right"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@drawable/dashed_bg_green"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/rupee"
                    android:src="@mipmap/rupee_symbol"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:id="@+id/total_savings"
                    android:layout_toRightOf="@+id/rupee"
                    android:paddingLeft="8dp"
                    android:paddingRight="16dp"
                    android:textColor="#2bbd7e"
                    android:text="Total savings of Rs.100.25 on this order"
                    android:textStyle="bold"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_savings"
                    android:text="MRP Discount 15%"
                    android:layout_toRightOf="@+id/rupee"
                    android:paddingLeft="8dp"
                    android:id="@+id/discount_percent"
                    android:layout_marginTop="16dp"
                    android:textColor="#2bbd7e"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_savings"
                    android:text="Rs.100.25"
                    android:layout_toRightOf="@+id/discount_percent"
                    android:paddingLeft="8dp"
                    android:gravity="right"
                    android:paddingRight="32dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/discount_price_saved"
                    android:layout_marginTop="16dp"
                    android:textColor="#2bbd7e"/>
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="232dp"
         android:layout_marginTop="16dp"
         android:layout_marginBottom="92dp"
         android:layout_below="@+id/cart_details_section">
         <androidx.appcompat.widget.LinearLayoutCompat
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="60dp"
                 android:layout_margin="16dp"
                 android:drawableLeft="@mipmap/safety"
                 android:background="#e5ffff"
                 android:paddingLeft="16dp"
                 android:layout_gravity="center"
                 android:gravity="center|left"
                 android:drawablePadding="16dp"
                 android:text="Products will be safely packaged and Sanitized. Pay online for contactless delivery."/>
              <androidx.appcompat.widget.AppCompatTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center|left"
                  android:gravity="center|left"
                  android:layout_marginLeft="16dp"
                  android:text="Additional Notes"
                  android:textStyle="bold"/>
             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="96dp"
                 android:id="@+id/additional_notes"
                 android:layout_gravity="center|left"
                 android:gravity="center|left"
                 android:paddingLeft="8dp"
                 android:layout_marginTop="8dp"
                 android:layout_marginRight="16dp"
                 android:layout_marginLeft="16dp"
                 android:hint="Enter any additional information regarding your order"
                 android:background="@drawable/search_bg_cart"/>

         </androidx.appcompat.widget.LinearLayoutCompat>
     </androidx.cardview.widget.CardView>
    </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
</RelativeLayout>