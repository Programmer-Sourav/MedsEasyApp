<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_margin="16dp"
        android:background="@drawable/background_drawable"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:weightSum="2"
        android:id="@+id/row_above">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:text="45% Off"
                android:gravity="center"
                android:background="@drawable/offer_bg"
                android:textColor="#FFFFFF"></TextView>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@mipmap/ib_1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_marginRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Liveasy Wellness Vitamin C (990 mg) With Zinc (10 mg...)"
                android:id="@+id/immuno_booster_name"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center|left"
                android:padding="8dp"></TextView>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="32dp"
                  android:textSize="12dp"
                  android:text="60 Tablet(s) in a Bottle"
                  android:gravity="center|left"
                  android:padding="8dp"
                  android:textColor="#000000"
                  android:id="@+id/ib_quantity"
                  android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textSize="12dp"
                android:text="₹ 485.5"
                android:gravity="center|left"
                android:padding="8dp"
                android:textColor="#000000"
                android:id="@+id/ib_price"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_margin="16dp"
        android:background="@drawable/background_drawable"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/row_above">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:text="25% Off"
                android:gravity="center"
                android:background="@drawable/offer_bg"
                android:textColor="#FFFFFF"></TextView>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@mipmap/ib_br_2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_marginRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Revital H Health Supplement Capsules Bottle with 30 Capsules"
                android:id="@+id/immuno_booster_name_below_row"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center|left"
                android:padding="8dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textSize="12dp"
                android:text="60 Capsule(s) in a Bottle"
                android:gravity="center|left"
                android:padding="8dp"
                android:textColor="#000000"
                android:id="@+id/ib_quantity_row_below"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textSize="12dp"
                android:text="₹ 555.5"
                android:gravity="center|left"
                android:padding="8dp"
                android:textColor="#000000"
                android:id="@+id/ib_price_row_below"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>