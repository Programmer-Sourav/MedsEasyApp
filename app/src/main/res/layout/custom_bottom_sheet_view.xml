<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/text_sort"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Sort"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="32dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:id="@+id/view_section"
        android:layout_below="@+id/text_sort" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:gravity="center"
        android:text="Popularity"
        android:textSize="16dp"
        android:layout_below="@+id/view_section"
        android:id="@+id/popularity_radio"
        android:textColor="#000000"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:gravity="center"
        android:text="Price low to high"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_below="@+id/popularity_radio"
        android:id="@+id/price_low_to_high_radio"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:gravity="center"
        android:text="Price high to low"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_below="@+id/price_low_to_high_radio"
        android:id="@+id/price_high_to_low"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:gravity="center"
        android:text="Discount"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_below="@+id/price_high_to_low"
        android:id="@+id/discount_radio"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:id="@+id/view_section_footer"
        android:layout_below="@+id/discount_radio" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/ripple"
        android:id="@+id/select_button"
        android:layout_margin="8dp"
        android:text="Select"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/view_section_footer" />
</RelativeLayout>